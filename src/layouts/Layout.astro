---
import MainHead from './MainHead.astro';
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro';
const { title, description, currentPath } = Astro.props;

---

<!doctype html>
<html lang="en">
	
	<MainHead title={`${title} - Veloxy CareRide`} description={description} />
	<body class="flex flex-col flex-grow  min-h-screen w-full my-5 max-w-[1340px] overflow-x-hidden  mx-auto bg-[#EBF2FA]">
		<Navbar currentPath={currentPath}  />
		  <slot></slot>
		<Footer />


	  </body>
</html>

