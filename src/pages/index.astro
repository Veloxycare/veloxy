---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import StoreButtons from '../components/StoreButtons.astro';
import LearnMore from '../components/LearnMore.astro';
import Services from '../components/Services.astro';
import Features from '../components/Features.astro';
import * as data from "../data/StoreButtons.md";
import * as learnmore from "../data/Learnmore.md";
const learnmoreHero = learnmore.frontmatter.learnmorehero;
import Videoplayer from "../components/Videoplayer";

const { title, description: description_2, features, contactNumber, image: image_2 } = learnmoreHero;
const { title_1, title_2, title_3, description, image, phone, google } = data.frontmatter.storeButtonsHome;
---

<Layout title="Home" description="Home page" currentPath="/">
   <Hero />
   <Videoplayer client:visible />
   <StoreButtons {title_1} {title_2} {title_3} {description} {image} {phone} {google} />
   <LearnMore {title} {description_2} {features} {contactNumber} {image_2} />
   <Services />
   <Features />
</Layout>

<!-- Smart banner script (executed after Layout renders) -->
<script is:inline>
   var head = document.getElementsByTagName('head')[0],
       script = document.createElement('script');
   script.type = 'text/javascript';
   script.src = 'https://banner.urlgeni.us/smart_banners/875593a3b6d1760b.js?url=' + encodeURI(window.location);
   console.log("Smart banner script injected:", script.src);
   head.appendChild(script);
 </script>
   